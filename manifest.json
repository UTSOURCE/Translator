{
  "manifest_version": 3,
  "name": "Translator快速翻译",
  "version": "1.1.0",
  "description": "使用浏览器内置的 Translator 与 Language Detector API 进行本地翻译，准确度高，响应速度快，支持自动检测与快速翻译。新增：自动/手动网页翻译。",
  "action": {
    "default_title": "Translator",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

